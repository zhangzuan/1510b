<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="activity.hhzmy.com.mybaiduditu.MainActivity">
    <com.baidu.mapapi.map.MapView
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:clickable="true"
        android:id="@+id/bmapView"/>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:id="@+id/jing" android:layout_weight="1"
        android:text="jing"/> <Button android:layout_height="wrap_content"
    android:layout_width="wrap_content" android:id="@+id/di"
    android:layout_weight="1" android:text="difang"
    android:layout_centerHorizontal="true" android:layout_below="@+id/jing"/>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:id="@+id/wei" android:layout_weight="1" android:text="wei"
        android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true" android:layout_alignParentTop="true"/>
</RelativeLayout>
